
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.fiap.activities"
      android:versionCode="1"
      android:versionName="1.0">
      
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />
    
    <permission
        android:name="com.fiap.activities.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /> 
    <uses-permission android:name="com.fiap.activities.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="helloandroid.ACAO_EXIBIR_SAUDACAO" />
				<category android:name="helloandroid.CATEGORIA_SAUDACAO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBx5go9fNVvyPJNEf0TS_3FR6q7MfzYYpc" />
        
        <activity android:name=".LoginActivity"
                  android:label="Login to your Account">
        </activity>
       
        <activity android:name=".RegisterActivity"
        		  android:label="Register New Account"></activity>
        
        <activity android:name=".InitialInfoActivity"
        		  android:label="Informações Iniciais"></activity>
        
        <activity android:name=".MainMenuActivity"
        		  android:label="Menus Principais"></activity>
        
        <activity android:name=".ActivitiesActivity"
        		  android:label="Lista de Atividades"></activity>
        
		<activity
            android:label="@string/tela_inicial"
            android:name=".GPSActivity"
            android:noHistory="true">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity
            android:label="@string/tela_login_facebook"
            android:name=".LoginFacebookActivity"
            android:noHistory="true">
        </activity>

		<activity
            android:label="@string/tela_post_facebook"
            android:name=".PostFacebookActivity"
            android:noHistory="true">
        </activity>
		    		    
		<activity
            android:name=".LoginTwitterActivity"
            android:excludeFromRecents="true"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="local" android:scheme="inner" />
            </intent-filter>
        </activity>
		
		<activity
            android:label="@string/tela_post_twitter"
            android:name=".PostTwitterActivity"
            android:noHistory="true">
        </activity>
		    
		<activity
            android:label="@string/tela_contato_twitter"
            android:name=".ContatoTwitterActivity"
            android:noHistory="true">
        </activity>

		<activity
            android:label="@string/tela_convite"
            android:name=".ConviteActivity"
            android:noHistory="true">
        </activity>		

    </application>
</manifest>
